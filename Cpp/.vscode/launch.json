            "type": "cppdbg",
			"request": "launch", 			
			"args": [],    
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "program": "${file}",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "program": "${workspaceFolder}\\bin\\${workspaceFolderBasename}"              
            },
			"windows": {			                	
                "MIMode": "gdb",
				"miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe",
                "program": "${workspaceFolder}\\bin\\${workspaceFolderBasename}.exe"
			},            
            "setupCommands": [
